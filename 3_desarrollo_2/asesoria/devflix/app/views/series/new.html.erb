<%= form_tag series_path do %>

  <div>
    <label>Nombre:</label>
    <%= text_field_tag :nombre %>
  </div>

  <div>
    <label for="">Descripci√≥n</label>
    <%= text_area_tag :descripcion %>
  </div>

  <% if @serie.errors.any? %>
